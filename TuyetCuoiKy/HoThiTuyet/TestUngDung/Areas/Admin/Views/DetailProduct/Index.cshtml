@model IEnumerable<ModelEF.EF.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section header{
    <i class="fa fa-apple"></i>&nbsp; Chi Tiết Sản Phẩm
}

@using (Html.BeginForm("Index", "OrderDetailController", FormMethod.Post))
{
    <div class="col-lg-12 form-group">
        <div class="col-md-6">
            <a href="@Url.Action("Index","Product")" class="btn btn-danger">Quay Lại</a>
        </div>
        <div class="col-md-4">
        </div>
        <div class="col-md-2">
        </div>
    </div>
}
<div class="col-lg-12 form-group">
    <table class="table">
        <tr>
            <th>
                Sản Phẩm
            </th>
            <th>
                Giá
            </th>
            <th>
                Hình Ảnh
            </th>
            <th>
                Mô Tả
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.UnitCost
                </td>
                <td>
                    <img style="width:50px;height:50px" src="~/Upload/sanpham/@item.Image" />
                </td>
                <td>
                    @item.Description
                </td>
            </tr>
        }

    </table>
</div>